{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "react/jsx-curly-newline": { "multiline": "consistent" },
    "react/state-in-constructor": [ "enabled" ],
    "react/static-property-placement": [ "enabled" ],
    "react/jsx-props-no-spreading": [ "enabled" ],
    "react/require-default-props": ["enabled"],
    "max-len": ["error", { "code": 200 }],
    "no-underscore-dangle": ["error", { "allow": ["_draggableHandle"] }]
  }
}